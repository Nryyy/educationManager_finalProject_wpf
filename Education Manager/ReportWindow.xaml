<Window x:Class="Education_Manager.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report Window" Height="147" Width="234">
    <Grid>
        <Label Content="Select File Type:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <ComboBox x:Name="FileTypeComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0" Width="200">
            <ComboBoxItem Content="DOCX"/>
            <ComboBoxItem Content="XLSX"/>
        </ComboBox>

        <Button Content="Generate Report" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0" Click="GenerateReportButton_Click"/>

        <TextBlock x:Name="StatusTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,120,0,0" Foreground="Green"/>
    </Grid>
</Window>
